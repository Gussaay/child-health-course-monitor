{
  "name": "nchp-monitoring-app",
  "version": "1.0.0",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@capacitor-community/file-opener": "^7.0.1",
    "@capacitor-firebase/authentication": "^7.3.1",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/assets": "^1.0.1",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.3",
    "@capgo/capacitor-updater": "^7.22.0",
    "@ionic/cli": "^7.2.0",
    "@tanstack/react-query": "^5.90.3",
    "@turf/boolean-point-in-polygon": "^7.2.0",
    "@turf/helpers": "^7.2.0",
    "arabic-reshaper": "^1.1.0",
    "chart.js": "^4.5.1",
    "chartjs-plugin-datalabels": "^2.2.0",
    "compression": "^1.8.1",
    "d3-geo": "^3.1.1",
    "d3-scale": "^4.0.2",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.2.1",
    "express": "^5.1.0",
    "firebase": "^11.2.0",
    "firebase-admin": "^13.5.0",
    "html2canvas": "^1.4.1",
    "js-file-download": "^0.4.12",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "leaflet": "^1.9.4",
    "leaflet-geosearch": "^4.2.2",
    "point-in-polygon": "^1.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-csv-reader": "^4.0.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-pdf": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "react-simple-maps": "^3.0.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.2",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build --base=./",
    "start": "node server.js",
    "preview": "vite preview",
    "electron:start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:electron && electron-builder",
    "mobile:sync": "npm run build && npx cap sync",
    "mobile:android": "npx cap run android",
    "mobile:build:apk": "npm run mobile:sync && cd android && gradlew.bat clean assembleDebug && cd ..",
    "mobile:deploy": "npm run build && npx ionic deploy"
  },
  "build": {
    "appId": "com.nchp.monitoring.desktop",
    "productName": "NCHP Monitoring",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/child.png"
    },
    "publish": {
      "provider": "github"
    }
  }
}
